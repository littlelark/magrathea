    "version": "2.0.0",
    "tasks": [
        {
            "label": "Hugo: Build",
            "type": "shell",
            "command": "rm -rf docs && hugo",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Hugo: Server",
            "type": "shell",
            "command": "hugo server"
        },
        {
            "label": "Hugo: Server with Drafts",
            "type": "shell",
            "command": "hugo server --buildDrafts"
        }
    ]
}
